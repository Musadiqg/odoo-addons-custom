<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="tw_inherit_res_partner_view_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="sms.res_partner_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_row_readonly')][1]" position="inside">
                <field name="tw_phone" widget="twilio_call" />
            </xpath>
            <xpath expr="//div[hasclass('o_row_readonly')][2]" position="inside">
                <field name="tw_modile" widget="twilio_call" />
            </xpath>
        </field>
    </record>

    <record id="tw_inherit_crm_res_partner_view_form" model="ir.ui.view">
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <!-- <xpath expr="//div[hasclass('o_row_readonly')][1]" position="inside">
                <field name="tw_phone" widget="twilio_call" />
            </xpath> -->
            <xpath expr="//div[hasclass('o_row_readonly')][2]" position="inside">
                <field name="tw_phone" widget="twilio_call" />
            </xpath>
        </field>
    </record>
</odoo>