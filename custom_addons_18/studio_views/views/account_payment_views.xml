<odoo>
  <record id="view_account_payment_form_inherit_clearing_code" model="ir.ui.view">
    <field name="name">account.payment.form.inherit.clearing.code</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="priority">16</field>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='date']" position="after">
        <field name="clearing_code" readonly="1" force_save="1"/>
      </xpath>
    </field>
  </record>
</odoo>