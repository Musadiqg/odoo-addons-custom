<odoo>
  <data>

    <record id="view_picking_form_ss" model="ir.ui.view">
        <field name="name">stock.picking.form.ss</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='clearing_code']" position="after">
                <field name="is_dist_inv" invisible="1"/>
<!--                <field name="stock_pickings" widget="many2many_tags" attrs="{ 'invisible' : [('move_type','in',['in_invoice','out_refund'])],'required':[('move_type','=','out_invoice')]}"/>-->
                <field name="stock_pickings" widget="many2many_tags" attrs="{ 'invisible' : [('is_dist_inv','=',False)],'required':[('is_dist_inv','=',True)]}"/>
            </xpath>
        </field>
    </record>

  </data>
</odoo>