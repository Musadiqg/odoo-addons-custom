<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

         <record id="svls_xlsx" model="ir.actions.report">
        <field name="name">Stock Valuation - Weighted Avg Cost</field>
        <field name="model">stock.report.weighted</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">report_xlsx.svl_xlsx</field>
        <field name="report_file">stock_report_weighted</field>
        <field name="binding_model_id" ref="avg_cost_report.model_stock_report_weighted"/>
    </record>

           <record id="nozzle_report_wizard_view_form" model="ir.ui.view">
            <field name="name">stock.report.weighted.form</field>
            <field name="model">stock.report.weighted</field>
            <field name="arch" type="xml">
                <form string="Weighted Average Cost in average">
                    <group>
                        <group >
                            <field name="start_at" invisible="1"/>
                            <field name="end_date" string="Till Date"/>
                            <field name="product_tmpl_id" invisible="1"/>
                            <field name="categ_id"/>
                            <field name="product_id" widget="many2many_tags" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_pdf_report" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>




         <record id="action_product_nozzle_report" model="ir.actions.act_window">
            <field name="name">Weighted Average Cost in average</field>
            <field name="res_model">stock.report.weighted</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

          <menuitem id="menu_nozzle_report"
            action="action_product_nozzle_report"
            parent="stock.menu_warehouse_report" sequence="600"/>
    </data>
</odoo>
