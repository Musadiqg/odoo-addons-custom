<odoo>
  <data>
    <!-- explicit list view definition -->

    <record id="view_tax_form_inherited_hudson" model="ir.ui.view">
            <field name="name">account.tax.form.inherited.hudson</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form" />
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='active']" position="after">
                     <field name="is_otc"/>
                     <field name="is_income_tax"/>
                    <field name="is_cosmo_income_tax"/>
                 </xpath>
            </field>
    </record>


    <record id="view_partner_form_inherited_hudson" model="ir.ui.view">
            <field name="name">res.partner.form.inherited.hudson</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='vat']" position="after">
                      <field name="x_status"/>
                </xpath>
            </field>
        </record>

       <record id="view_product_form_inherited_hudson" model="ir.ui.view">
            <field name="name">product.template.form.inherited.hudson</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='company_id']" position="after">
                      <field name="x_status"/>
                </xpath>
            </field>
        </record>

       <record id="cron_set_new_taxes_id" model="ir.cron">
        <field name="name">New Taxes Keys: Set 1% and 3% taxes in Fiscals</field>
        <field name="model_id" ref="model_account_tax"/>
        <field name="state">code</field>
        <field name="code">model.set_new_taxes()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
        <field name="numbercall">-1</field>
       <field name="active">False</field>
    </record>

  </data>
</odoo>